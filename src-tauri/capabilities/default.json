{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$LOCALDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-resource-read-recursive"
  ]
}