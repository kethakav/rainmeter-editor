{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rainmeter Editor",
  "version": "0.2.4",
  "identifier": "com.kethakav.rainmeter-editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rainmeter Editor",
        "maximized": true,
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APP_DIR/**",
          "$HOME/**",
          "$LOCALDATA/**",
          "**"
        ]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://raw.githubusercontent.com/kethakav/rainmeter-editor-releases/refs/heads/main/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBMEMxOEZDN0M2OUM2OQpSV1Jwbk1iSGo4R2dBYXYrbnlleURGdkpDSy94WmZKU0NJclpSWVZQMXA0SnFYc1VlUkxVa2xBUgo="
    }
  },
  "bundle": {
    "publisher": "Kethaka Vidyananda",
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/fonts/",
      "../public/images/"
    ]
  }
}
